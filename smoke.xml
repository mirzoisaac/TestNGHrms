<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite">
	<listeners>
		<listener class-name="com.hrms.testbase.Listener"></listener>
	</listeners>

	<test name="Smoke Test">
		<groups>
			<run>
				<include name="smoke"></include>
			</run>
		</groups>
		<packages>
			<package name="com.hrms.testcases"></package>
		</packages>
	</test>
</suite> 
